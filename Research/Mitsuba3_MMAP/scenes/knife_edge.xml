<scene version="3.0.0">
    <default name="spp" value="1024"/>
    <default name="res" value="1024"/>
    <default name="max_depth" value="6"/>
    <default name="integrator" value="path"/>

    <integrator type='$integrator'>
        <integer name="max_depth" value="$max_depth"/>
    </integrator>
    
    <sensor type="perspective" id="sensor">
        <string name="fov_axis" value="smaller"/>
        <float name="near_clip" value="10"/>
        <float name="far_clip" value="2800"/>
        <float name="focus_distance" value="10"/>
        <float name="fov" value="70"/>
        <transform name="to_world">
            <lookat origin="0, 0, -80"
                    target="0, 0, -79"
                    up    ="  0,   1,    0"/>
        </transform>

        <sampler type="independent">  <!-- ldsampler -->
            <integer name="sample_count" value="$spp"/>
        </sampler>
        <film type="hdrfilm">
            <integer name="width" value="$res"/>
            <integer name="height" value="$res"/>
            <rfilter type="gaussian"/>
        </film>
    </sensor>

    <!---->
    <!--Materials-->
    <!--MMAP-Glass-->
    <bsdf type="roughdielectric" id="MMAP_Glass">
        <string name="distribution" value="beckmann"/>
        <float name="int_ior" value="1.52"/> <!--1.52-->
        <float name="alpha" value="0.00"/>
    </bsdf>
    <!--MMAP-Mirror-->
    <bsdf type="twosided" id="MMAP_Mirror">
        <bsdf type="roughconductor" id="Mirror">
            <string name="distribution" value="beckmann"/>
            <rgb name="eta" value="0.87, 0.87, 0.87"/> <!--0.87-->
            <rgb name="k" value="0.87, 0.87, 0.87"/> <!--0.87-->
            <float name="alpha" value="0.001"/>
        </bsdf>
    </bsdf>

    <!--Objects-->
    <!--MMAP-Glass-->
    <shape type="obj">
        <string name="filename" value="../scenes/meshes/MMAP_glass.obj"/>
        <transform name="to_world">
            <rotate x="1" angle="-45"/>
            <scale x="1" y="1" z="1"/>
        </transform>
        <ref id="MMAP_Glass"/>
    </shape>
    <!--MMAP-Mirror-->
    <shape type="obj">
        <string name="filename" value="../scenes/meshes/mmaps_nodetail_noglass.obj"/>
        <transform name="to_world">
            <rotate x="1" angle="-45"/>
            <scale x="1" y="1" z="1"/>
        </transform>
        <ref id="MMAP_Mirror"/>
    </shape>
    <!--Display-->
    
    <shape type="obj">
        <string name="filename" value="../scenes/meshes/Display.obj"/>
        <emitter type="area">
            <texture name="radiance" type="bitmap">
                <string name="filename" value="../scenes/textures/edgeBaseImage.png"/>
                <transform name="to_uv">
                    <rotate z="1" angle="-5"/>
                </transform>
            </texture>
        </emitter>
        <bsdf type="diffuse" id="Display"/>
        <transform name="to_world">
            <scale x="8" y="1" z="8"/>
            <rotate y="1" angle="180"/>
            <!--<rotate z="1" angle="-5"/>-->
            <translate x="0" y="-20" z="0"/>
        </transform>
    </shape>
   
    <!---->
</scene>